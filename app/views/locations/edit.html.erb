<h1>Edit location <%= @location["location_title"] %></h1>

<%= form_tag("locations/update/#{@location['id']}", method: "patch") do %>
	<p>
		<%= label_tag(:lattitude, "Lattitude") %>
		<%= text_field_tag(:lattitude) %>
	</p>

	<p>
		<%= label_tag(:hemi_n_s, "North or South Hemisphere") %>
		<%= text_field_tag(:hemi_n_s) %>
	</p>

	<p>
		<%= label_tag(:longitude, "Longitude") %>
		<%= text_field_tag(:longitude) %>
	</p>
	
	<p>
		<%= label_tag(:hemi_e_w, "East or West Hemisphere") %>
		<%= text_field_tag(:hemi_e_w) %>
	</p>

	<% submit_tag("Update") %>
<% end %>