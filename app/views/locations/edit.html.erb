<h1>Edit location <%= @location["location_title"] %></h1>



<%= form_for :locations, url: locations_update_path, method: "patch" do |f| %>
	<div>
	<%= f.label :location_title, "Location Name", class: "loc-form-label" %>
		<%= f.text_field :location_title, class: "loc-form-field", value: @location["location_title"] %>
	</div>
	<div>
		<%= f.label :street_address, "Street Address", class: "loc-form-label" %>
		<%= f.text_field :street_address, class: "loc-form-field", value: @location["street_address"] %>
	</div>

	<div>
		<%= f.label :city, "City", class: "loc-form-label"%>
		<%= f.text_field :city, class: "loc-form-field", value: @location["city"] %>
	</div>

	<div>
		<%= f.label :state, "State", class: "loc-form-label" %>
		<%= f.text_field :state, class: "loc-form-field", value: @location["state"] %>
	</div>

	<div>
		<%= f.label :zip_code, "Zip Code", class: "loc-form-label" %>
		<%= f.text_field :zip_code, class: "loc-form-field", value: @location["postal_code"] %>
	</div>

	<%= f.submit %>
<% end %>

<%= link_to "Home Page", root_path %>