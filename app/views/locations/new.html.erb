<h1>Register your business location</h1>

<% if @errors %>
	<ul>
		<% @errors.each do |error| %>
			<li class="create-error"><%= error %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for :locations, url: locations_create_path do |f| %>
	<div>
	<%= f.label :location_title, "Location Name", class: "loc-form-label" %>
		<%= f.text_field :location_title, class: "loc-form-field" %>
	</div>
	<div>
		<%= f.label :street_address, "Street Address", class: "loc-form-label" %>
		<%= f.text_field :street_address, class: "loc-form-field" %>
	</div>

	<div>
		<%= f.label :city, "City", class: "loc-form-label"%>
		<%= f.text_field :city, class: "loc-form-field" %>
	</div>

	<div>
		<%= f.label :state, "State", class: "loc-form-label" %>
		<%= f.text_field :state, class: "loc-form-field" %>
	</div>

	<div>
		<%= f.label :zip_code, "Zip Code", class: "loc-form-label" %>
		<%= f.text_field :zip_code, class: "loc-form-field" %>
	</div>

	<%= f.submit %>
<% end %>

<%= link_to "Home Page", root_path %>